<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Resource name="jdbc/ytsquare"
		 auth="Container"
		 maxIdleTime="60"
		 minPoolSize="5"
		 maxPoolSize="15" 
		 acquireIncrement="5"
		 initialPoolSize="5"
		 user="ytsquare"
		 password="ytsquare"
		 factory="org.apache.naming.factory.BeanFactory"
		 type="com.mchange.v2.c3p0.ComboPooledDataSource"
		 jdbcUrl="jdbc:mysql://localhost:3306/ytsquare?autoReconnect=true"		 
		 driverClass="com.mysql.jdbc.Driver"/>
</Context>	